@{
    ViewData["Title"] = "Question List";
}
@model IEnumerable<QuestionDto>
<a class="btn btn-primary d-flex justify-content-center custom-dark-blue text-white" asp-controller="Question" asp-action="Save">Add Question</a>
<table class="table table-striped custom-dark-blue text-white">
    <thead>
    <tr>
        <td>Id</td>
        <td>Question</td>
        <td>Created Date</td>
        <td>Actions</td>
    </tr>
    </thead>

    <tbody>
    @foreach (QuestionDto item in Model)
    {
        <tr>
            <td class="custom-dark-blue text-white">@item.Id</td>
            <td class="custom-dark-blue text-white">@item.QuestionText</td>
            <td class="custom-dark-blue text-white">@item.CreatedDate</td>
            <td>
                <a class="btn btn-warning custom-dark-blue text-white" asp-controller="Question" asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a class="btn btn-danger custom-dark-blue text-white" asp-controller="Question" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>