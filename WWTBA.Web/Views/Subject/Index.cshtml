@{
    ViewData["Title"] = "Index";
}
@model List<SubjectWithQuestionCountModel>

<table class="table table-striped custom-dark-blue text-white">
    <thead>
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Lesson</td>
        <td class="text-center">Question Count</td>
        <td>Created Date</td>
        <td>Actions</td>
    </tr>
    </thead>

    <tbody>
    @foreach (SubjectWithQuestionCountModel item in Model)
    {
        <tr>
            <td class="custom-dark-blue text-white">@item.SubjectWithLessonDto.Id</td>
            <td class="custom-dark-blue text-white">@item.SubjectWithLessonDto.Name</td>
            <td class="custom-dark-blue text-white">@item.SubjectWithLessonDto.Lesson.Name</td>
            <td class="custom-dark-blue text-white text-center">@item.QuestionCount</td>
            <td class="custom-dark-blue text-white">@item.SubjectWithLessonDto.CreatedDate</td>
            <td>
                <a class="btn btn-warning custom-dark-blue text-white" asp-controller="Subject" asp-action="Update" asp-route-id="@item.SubjectWithLessonDto.Id">Update</a>
                <a class="btn btn-danger custom-dark-blue text-white" asp-controller="Subject" asp-action="Remove" asp-route-id="@item.SubjectWithLessonDto.Id">Delete</a>
                <a class="btn btn-info custom-dark-blue text-white" asp-controller="Question" asp-action="ListQuestions" asp-route-id="@item.SubjectWithLessonDto.Id">List Questions</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-primary d-flex justify-content-center custom-dark-blue text-white" asp-controller="Subject" asp-action="Save">Add Subject</a>