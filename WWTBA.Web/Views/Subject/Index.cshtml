@{
    ViewData["Title"] = "Index";
}
@model List<SubjectWithLessonDto>

<table class="table table-striped">
    <thead>
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Lesson</td>
        <td>Created Date</td>
        <td>Actions</td>
    </tr>
    </thead>

    <tbody>
    @foreach (SubjectWithLessonDto item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Lesson.Name</td>
            <td>@item.CreatedDate</td>
            <td>
                <a class="btn btn-warning" asp-controller="Subject" asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a class="btn btn-danger" asp-controller="Subject" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                <a class="btn btn-info text-white" asp-controller="Subject" asp-action="Remove" asp-route-id="@item.Id">List Questions</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-primary d-flex justify-content-center" asp-controller="Subject" asp-action="Save">Add Subject</a>