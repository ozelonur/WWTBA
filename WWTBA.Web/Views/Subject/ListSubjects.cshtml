@{
    ViewData["Title"] = "Question List";
}
@model IEnumerable<SubjectDto>

<table class="table table-striped custom-dark-blue text-white">
    <thead>
    <tr>
        <td>Id</td>
        <td>Subject</td>
        <td>Lesson Id</td>
        <td>Created Date</td>
        <td>Actions</td>
    </tr>
    </thead>

    <tbody>
    @foreach (SubjectDto item in Model)
    {
        <tr>
            <td class="custom-dark-blue text-white">@item.Id</td>
            <td class="custom-dark-blue text-white">@item.Name</td>
            <td class="custom-dark-blue text-white">@item.LessonId</td>
            <td class="custom-dark-blue text-white">@item.CreatedDate</td>
            <td>
                <a class="btn btn-warning custom-dark-blue text-white" asp-controller="Subject" asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a class="btn btn-danger custom-dark-blue text-white" asp-controller="Subject" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                <a class="btn btn-info custom-dark-blue text-white" asp-controller="Question" asp-action="ListQuestions" asp-route-id="@item.Id">List Questions</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-primary d-flex justify-content-center custom-dark-blue text-white" asp-controller="Subject" asp-action="Save">Add Subject</a>