@{
    ViewData["Title"] = "Update";
}
@model LessonDto

<h1 class="text-center">Update Lesson</h1>

<div class="row">
    <div class="col-md-6 d-flex justify-content-center"></div>
    <form asp-action="Update" method="post" asp-controller="Lesson">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group text-center d-flex justify-content-center" style="text-align: center;">
            <label asp-for="Name" class="d-flex justify-content-center" style="margin-bottom: 10px;"></label>
        </div>
        <div class="form-group text-center d-flex justify-content-center" style="text-align: center;">
            <input asp-for="Name" class="form-control text-center" style="width: 30vw; text-align: center;"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Update" class="btn btn-primary space-above"/>
        </div>
    </form>
</div>