@{
    ViewData["Title"] = "Index";
}
@model List<LessonWithSubjectCountModel>

<div class="text-white" style="display: flex; justify-content: center;">
    <table class="table table-striped text-white">
        <thead>
        <tr>
            <td class="text-white text-center">Id</td>
            <td class="text-white text-center">Name</td>
            <td class="text-white text-center">Subject Count</td>
            <td class="text-white text-center">Created Date</td>
            <td class="text-white" style="text-align: right;">Actions</td>
        </tr>
        </thead>

        <tbody>
        @foreach (LessonWithSubjectCountModel item in Model)
        {
            <tr>
                <td class="text-white text-center">@item.LessonDto.Id</td>
                <td class="text-white text-center">@item.LessonDto.Name</td>
                <td class="text-white text-center">@item.SubjectCount</td>
                <td class="text-white text-center">@item.LessonDto.CreatedDate</td>
                <td class="text-white" style="text-align: right;">
                    <a class="btn btn-warning custom-dark-blue text-white" asp-controller="Lesson" asp-action="Update" asp-route-id="@item.LessonDto.Id">Update</a>
                    <a class="btn btn-danger custom-dark-blue text-white" asp-controller="Lesson" asp-action="Remove" asp-route-id="@item.LessonDto.Id">Delete</a>
                    <a class="btn btn-info custom-dark-blue text-white" asp-controller="Subject" asp-action="ListSubjects" asp-route-id="@item.LessonDto.Id">List Subjects</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<a class="btn btn-primary d-flex justify-content-center custom-dark-blue text-white" style="display:flex; width: auto;" asp-controller="Lesson" asp-action="Save">Add Lesson</a>