@{
    ViewData["Title"] = "Index";
}
@model List<LessonDto>

<div class="text-white" style="display: flex; justify-content: center;">
    <table class="table table-striped text-white" style="width: auto;">
        <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Actions</td>
        </tr>
        </thead>

        <tbody>
        @foreach (LessonDto item in Model)
        {
            <tr>
                <td class="text-white">@item.Id</td>
                <td class="text-white">@item.Name</td>
                <td>
                    <a class="btn btn-warning text-white" asp-controller="Lesson" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger text-white" asp-controller="Lesson" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>